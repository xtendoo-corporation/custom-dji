<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="invisible_product_cost" model="ir.ui.view">
            <field name="name">invisible.product.cost</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='standard_price']" position="replace">
                    <field name="is_administrator" invisible="1"/>
                    <field name="standard_price" attrs="{'invisible': [('is_administrator', '=', False)]}" force_save="1"/>
                </xpath>
                <xpath expr="//page[@name='purchase']//field[@name='seller_ids']" position="replace">
                    <field name="seller_ids" attrs="{'invisible': [('is_administrator', '=', False)]}" force_save="1"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
