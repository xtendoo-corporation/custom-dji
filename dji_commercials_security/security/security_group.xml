<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Comercial Enrique -->
        <record id="enrique_payments" model="res.groups">
            <field name="name">Enrique</field>
        </record>

         <record id="payment_term_enrique" model="ir.rule">
            <field name="name">Modos de pago enrique</field>
            <field name="model_id" ref="account.model_account_journal"/>
            <field name="domain_force">['|',('name','in',('Efectivo Enrique','Cheques / Pagarés')),('type','in',('sale','purchase','general'))]</field>
            <field name="groups" eval="[(4, ref('dji_commercials_security.enrique_payments'))]"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="True"/>
        </record>
        <!-- Fin Comercial Enrique -->
