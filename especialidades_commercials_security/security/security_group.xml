<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
          <!-- Grupo -->
            <record model="ir.module.category" id="group_commercials_security">
                <field name="name">Especialidades Comerciales</field>
                <field name="sequence">60</field>
            </record>
        <!-- Comercial Juan Jose -->
        <record id="jjose_payments" model="res.groups">
            <field name="name">Juan Jose</field>
            <field name="category_id" ref="group_commercials_security"/>
        </record>

         <record id="payment_term_jjose" model="ir.rule">
            <field name="name">Modos de pago Juan Jose</field>
            <field name="model_id" ref="account.model_account_journal"/>
            <field name="domain_force">['|',('name','in',('Cheques / Pagarés','Efectivo Juan Jose')),('type','in',('sale','purchase','general'))]</field>
            <field name="groups" eval="[(4, ref('especialidades_commercials_security.jjose_payments'))]"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="True"/>
        </record>
        <!-- Fin Comercial Juan Jose -->
        <!-- Comercial Juan Jose -->
        <record id="marcos_payments" model="res.groups">
            <field name="name">Marcos</field>
            <field name="category_id" ref="group_commercials_security"/>
        </record>

         <record id="payment_term_marcos" model="ir.rule">
            <field name="name">Modos de pago Marcos</field>
            <field name="model_id" ref="account.model_account_journal"/>
            <field name="domain_force">['|',('name','in',('Cheques / Pagarés','Efectivo Marco Mancheño')),('type','in',('sale','purchase','general'))]</field>
            <field name="groups" eval="[(4, ref('especialidades_commercials_security.marcos_payments'))]"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_read" eval="True"/>
        </record>
        <!-- Fin Comercial Juan Jose -->
    </data>
</odoo>
