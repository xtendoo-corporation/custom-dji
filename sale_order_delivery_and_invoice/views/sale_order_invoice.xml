<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="sale_order_invoice_view_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.invoice.view.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_confirm']" position="after">
                    <button name="delivery_and_invoice" type="object" string="Deliver and Invoice" class="btn-primary" style="color: #fff;" attrs="{'invisible': [('state', '!=', 'sale')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

