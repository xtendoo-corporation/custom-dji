<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="stock_move_line_view_form_inherit" model="ir.ui.view">
        <field name="name">stock.move.line.view.form.inherit</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='product_id']" position="before">
                <field name="is_expired" invisible="1"/>
            </xpath>
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-danger">is_expired == True</attribute>
            </xpath>

        </field>
    </record>

    </data>
</odoo>
